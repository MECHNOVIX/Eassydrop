<script>
  function changeQty(val) {
    const qtyInput = document.getElementById("qty");
    let qty = parseInt(qtyInput.value) + val;
    if (qty < 1) qty = 1;
    qtyInput.value = qty;
    document.getElementById("quantityField").value = qty;
  }

  function selectChalk(imageUrl, name) {
    const mainImg = document.getElementById("mainImage");
    const mainName = document.getElementById("mainName");
    const chalkField = document.getElementById("chalkType");
    mainImg.src = imageUrl;
    mainName.textContent = name;
    chalkField.value = name;
    window.scrollTo({ top: 0, behavior: "smooth" });
  }

  async function bookOrder() {
    const form = document.getElementById("orderForm");
    const name = document.getElementById("name").value.trim();
    const phone = document.getElementById("phone").value.trim();
    const address = document.getElementById("address").value.trim();

    if (!name || !phone || !address) {
      alert("Please fill in all required fields!");
      return;
    }

    const formData = new FormData(form);

    try {
      const response = await fetch("https://api.web3forms.com/submit", {
        method: "POST",
        body: formData
      });

      const data = await response.json();
      if (data.success) {
        alert("Thank you " + name + "! Your order has been received. We'll confirm within 24 hours on your phone: " + phone);
        form.reset();
        document.getElementById("qty").value = 1;
        document.getElementById("quantityField").value = 1;
      } else {
        alert("Something went wrong! Please try again later.");
      }
    } catch (error) {
      alert("Network error! Please check your connection.");
    }
  }
  
  
  
  
  let LANG="", GENDER="";
const chat=document.getElementById("chat");

/* OPEN / CLOSE */
function openChat(){
  chat.innerHTML="";
  document.getElementById("chatBox").style.display="flex";
  askLanguage();
}
function closeChat(){
  document.getElementById("chatBox").style.display="none";
}

/* LANGUAGE */
function askLanguage(){
  chat.innerHTML+=`
  <div class="bot">Select language / ‡§≠‡§æ‡§∑‡§æ ‡§ö‡•Å‡§®‡•á‡§Ç</div>
  <div class="options">
    <button onclick="setLang('en')">English</button>
    <button onclick="setLang('hi')">‡§π‡§ø‡§Ç‡§¶‡•Ä</button>
  </div>`;
}
function setLang(l){LANG=l;askGender();}

/* GENDER */
function askGender(){
  chat.innerHTML+=`
  <div class="bot">${LANG==='en'?'Select Gender':'‡§≤‡§ø‡§Ç‡§ó ‡§ö‡•Å‡§®‡•á‡§Ç'}</div>
  <div class="options">
    <button onclick="setGender('Men')">${LANG==='en'?'Male':'‡§™‡•Å‡§∞‡•Å‡§∑'}</button>
    <button onclick="setGender('Women')">${LANG==='en'?'Female':'‡§Æ‡§π‡§ø‡§≤‡§æ'}</button>
  </div>`;
}
function setGender(g){GENDER=g;askType();}

/* TYPE */
function askType(){
  chat.innerHTML+=`
  <div class="bot">${LANG==='en'?'What do you want?':'‡§Ü‡§™ ‡§ï‡•ç‡§Ø‡§æ ‡§ö‡§æ‡§π‡§§‡•á ‡§π‡•à‡§Ç?'}</div>
  <div class="options">
    <button onclick="askSkin()">Dress Colour</button>
    <button onclick="askOccasion()">Dress Type</button>
  </div>`;
}

/* SKIN TONES */
const skins=[
 {n:"Fair & Light",c:"#f5d7c4"},
 {n:"Wheatish & Medium",c:"#d1a684"},
 {n:"Olive & Brown",c:"#b37b52"},
 {n:"Dusky & Deep Brown",c:"#845a3c"},
 {n:"Dark & Very Dark",c:"#3a2418"}
];

function askSkin(){
  chat.innerHTML+=`
  <div class="bot">Select your skin tone</div>
  <div class="skin-grid">
    ${skins.map(s=>`
      <div class="skin-btn" onclick="showColors('${s.n}')">
        <div class="skin-color" style="background:${s.c}"></div>${s.n}
      </div>`).join("")}
  </div>`;
}

